package com.myste.sbb;

import static org.junit.jupiter.api.Assertions.assertEquals;

import java.time.LocalDateTime;
import java.util.List;

import org.junit.jupiter.api.Test;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.test.context.SpringBootTest;

@SpringBootTest
class SbbApplicationTests {

	
	
	private QusetionRepository questionRepository;
	
	@Autowired
	public SbbApplicationTests(QusetionRepository questionRepository) {
		super();
		this.questionRepository =questionRepository;
	}
	
	
	@Test
	void testJpa() {
		List<Question> all = this.questionRepository.findAll(); //select * from question;
		assertEquals(2, all.size());
		
		Question q = all.get(0);
		assertEquals("Sbb에 대해서 알려주세요", q.getSubject());
		
	}
}
