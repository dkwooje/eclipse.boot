package com.myste.sbb;

import java.time.LocalDateTime;

import org.junit.jupiter.api.Test;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.test.context.SpringBootTest;

@SpringBootTest
class SbbApplicationTests {

	
	
	private QusetionRepository questionRepository;
	
	@Autowired
	public SbbApplicationTests(QusetionRepository questionRepository) {
		super();
		this.questionRepository =questionRepository;
	}
	
	
	@Test
	void testJpa() {
		Question q1 = new Question();
		q1.setSubject("sbb가 무엇입니까?");
		q1.setContent("Sbb에 대해 알려주십시오");
		q1.setCreateDate(LocalDateTime.now());
		this.questionRepository.save(q1);
		
		Question q2 = new Question();
		q2.setSubject("스프링 부트의 모델이란?");
		q2.setContent("id는 자동으로 생성되는건가여?");
		q2.setCreateDate(LocalDateTime.now());
		this.questionRepository.save(q2);
	}
}
